---
export interface Props {
  title: string;
  href: string;
  isActiveUrl: boolean;
}

const { title, href, isActiveUrl } = Astro.props;
---

<li>
  <a
    href={href}
    class={isActiveUrl
      ? "block py-2 px-4 text-blue-700 border-b-blue-700 border-b-2"
      : "block py-2 px-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700"}
    aria-current="page">{title}</a
  >
</li>
