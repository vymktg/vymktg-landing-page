---
import { PARTNER_LIST } from "../../config";
import Container from "../shared/Container.astro";
---

<section id="partners">
  <div class="mx-auto max-w-7xl w-full px-5 sm:px-8 md:px-14 lg:px-5 space-y-8">
    <div class="text-center max-w-3xl mx-auto">
      <h1 class="font-semibold text-sm md:text-base uppercase">
        Trusted by companies like
      </h1>
    </div>
    <div class="splide cursor-pointer">
      <div class="splide__track">
        <div class="splide__list">
          {
            PARTNER_LIST.map((item) => (
              <div class="splide__slide p-4 sm:p-5 group w-40 flex justify-center mx-auto">
                <img
                  src={`images/${item.url}`}
                  alt="spotify"
                  class="h-16 w-auto ease-linear duration-300 lg:grayscale group-hover:!grayscale-0 group-hover:scale-105"
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<script src="../../js/splide-init.ts"></script>
