---
import { SITE } from "../../config";
import Container from "../shared/Container.astro";
---

<div class="pt-20 bg-blue-50">
  <Container>
    <div class="flex flex-row flex-wrap gap-y-12">
      <div class="flex flex-col gap-10 md:gap-7 w-full lg:w-[33%]">
        <h1
          class="text-3xl font-semibold tracking-wide text-blue-950 uppercase"
        >
          Vy Trinh
        </h1>
        <p class="md:w-11/12">
          As a specialist in digital marketing and communication, I take pride
          in being your dedicated partner to handle your marketing efforts.
        </p>
      </div>
      <div class="flex flex-col gap-10 md:gap-7 w-full lg:w-[33%]">
        <p class="tracking-wide font-bold uppercase">OFFICE</p>
        <address class="text-base w-10/12 not-italic">
          {SITE.address}
        </address>

        <div class="flex flex-col gap-2">
          <a
            class="flex flex-row gap-4 justify-start items-center hover:text-primary cursor-pointer"
            href={`mailto:${SITE.email}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
            >
              <path
                d="M17 20.5H7C4 20.5 2 19 2 15.5V8.5C2 5 4 3.5 7 3.5H17C20 3.5 22 5 22 8.5V15.5C22 19 20 20.5 17 20.5Z"
                stroke="#9ca3af"
                stroke-width="1.5"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
              <path
                d="M17 9L13.87 11.5C12.84 12.32 11.15 12.32 10.12 11.5L7 9"
                stroke="#9ca3af"
                stroke-width="1.5"
                stroke-miterlimit="10"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
            <span>{SITE.email}</span>
          </a>
          <a
            class="flex flex-row gap-4 justify-start items-center hover:text-primary cursor-pointer"
            href={`tel:${SITE.phoneNumber.replace('-', '')}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-gray-400"
            >
              <path
                d="M15 22.75H9C4.59 22.75 3.25 21.41 3.25 17V7C3.25 2.59 4.59 1.25 9 1.25H15C19.41 1.25 20.75 2.59 20.75 7V17C20.75 21.41 19.41 22.75 15 22.75ZM9 2.75C5.42 2.75 4.75 3.43 4.75 7V17C4.75 20.57 5.42 21.25 9 21.25H15C18.58 21.25 19.25 20.57 19.25 17V7C19.25 3.43 18.58 2.75 15 2.75H9Z"
              ></path>
              <path
                d="M14 6.25H10C9.59 6.25 9.25 5.91 9.25 5.5C9.25 5.09 9.59 4.75 10 4.75H14C14.41 4.75 14.75 5.09 14.75 5.5C14.75 5.91 14.41 6.25 14 6.25Z"
              ></path>
              <path
                d="M12 19.86C10.73 19.86 9.7 18.83 9.7 17.56C9.7 16.29 10.73 15.26 12 15.26C13.27 15.26 14.3 16.29 14.3 17.56C14.3 18.83 13.27 19.86 12 19.86ZM12 16.75C11.56 16.75 11.2 17.11 11.2 17.55C11.2 17.99 11.56 18.35 12 18.35C12.44 18.35 12.8 17.99 12.8 17.55C12.8 17.11 12.44 16.75 12 16.75Z"
              ></path>
            </svg>
            <span>{`tel:${SITE.phoneNumber}`}</span>
          </a>
        </div>
      </div>
      <div class="w-1/2 lg:w-[17%]">
        <p class="tracking-wide font-bold uppercase">MENU</p>
        <ul class="mt-2 space-y-2">
          <li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >Services</a
            >
          </li>

          <li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >How it Works</a
            >
          </li><li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >Projects & Insight</a
            >
          </li>
        </ul>
      </div>
      <div class="w-1/2 lg:w-[17%] pl-10">
        <p class="tracking-wide font-bold uppercase">Links</p>
        <ul class="mt-2 space-y-2">
          <li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >About us</a
            >
          </li>
          <li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >Contact</a
            >
          </li>
          <li>
            <a
              href="/"
              class="transition-colors duration-300 hover:text-primary"
              >Help Center</a
            >
          </li>
        </ul>
      </div>
    </div>
    <div
      class="flex flex-row justify-between border-t border-gray-300 mt-5 py-5"
    >
      <div class="flex flex-col justify-between sm:flex-row">
        <p class="text-sm">
          {SITE.copyRightText}
        </p>
      </div>

      <div class="flex items-center mt-4 space-x-4 sm:mt-0">
        <a
          href="/"
          target="_blank" rel="noopener noreferrer"
          class="text-gray-500 duration-300 hover:scale-125 transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
