---
import { Image } from "astro:assets";
import type { Service } from "../../interface/Service";
import Container from "../shared/Container.astro";
import ServiceDetailBackground from "../shared/ServiceDetailBackground.astro";

export interface Props extends Service {

}

const {
  title,
  service_detail,
  description,
  testimonial: { name, position, comment, avatar, company_logo },
  background,
  image_name,
} = Astro.props;

const images = import.meta.glob("../../assets/images/services/*");
---

<section class="pb-32">
  <Container className="relative">
  <ServiceDetailBackground backgroundName={background} />
    <div class="p-10 md:p-14">
      <div class="flex flex-col lg:flex-row gap-14">
        <div class="lg:w-1/3 flex flex-col justify-between items-start">
          <div class="flex flex-col gap-10">
            <h1 class="text-6xl font-semibold">{title}</h1>
            <p class="text-lg font-medium">
              {description}
            </p>
          </div>
          <div class="bg-white p-8 flex flex-col gap-4">
            <!-- <Image src={images[`../../assets/images/services/${company_logo}.png`]()} class="grayscale w-40 h-20 object-scale-down" alt="" /> -->
            <p class="text-base">{`"${comment}"`}</p>
            <div class="flex flex-row text-base font-semibold justify-start items-center gap-5">
              <Image src={images[`../../assets/images/services/${avatar}.png`]()} class="object-cover w-14 h-14 rounded-full" alt="" />
              <div>
                <p class="text-base">{name}</p>
              <p class="text-base">{position}</p>
              </div>
            </div>
          </div>
        </div>
        <div class="lg:w-2/3 flex flex-col gap-14">
          <Image src={images[`../../assets/images/services/${image_name}.png`]()} alt="" />
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-14">
            {
              service_detail &&
                service_detail.map((item) => (
                  <div class="flex flex-col gap-5">
                    <h2 class="font-medium text-2xl">{item.title}</h2>
                    <p class="text-base font-medium tracking-wide">
                      {item.description}
                    </p>
                  </div>
                ))
            }
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
