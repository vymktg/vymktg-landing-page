---
import Container from "../shared/Container.astro";
import { CTA_CALCULATOR } from "../../config";
import ButtonLink from "../shared/ButtonLink.astro";
import { Image } from "astro:assets";

import ctaImage from "../../assets/images/cta-cal.jpeg";
---

<section class="cta-calculator">
  <Container>
    <div class="flex flex-col md:flex-row gap-10">
      <div class="w-7/12 flex flex-col gap-8 justify-center items-start order-last">
        {
          CTA_CALCULATOR.map((item, index) => (
            <div
              class="flex flex-col md:flex-row justify-center items-center md:items-start gap-4"
              data-aos="fade-up"
              data-aos-delay={500 * index}
              data-aos-once="true"
            >
              <div class="w-12">
                <svg
                  class="w-8 h-8 ml-3"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                >
                  <path
                    d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"
                    stroke="#2563eb"
                    stroke-width="1.2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M7.75 11.9999L10.58 14.8299L16.25 9.16992"
                    stroke="#2563eb"
                    stroke-width="1.2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
              <div class="flex flex-col gap-4">
                <h2 class="text-base md:text-2xl font-bold text-center md:text-left">
                  {item.title}
                </h2>
                <div class="text-center md:text-left">{item.description}</div>
              </div>
            </div>
          ))
        }
        <div
          class="text-center md:text-left ml-4"
          data-aos="fade-right"
          data-aos-delay={400 * CTA_CALCULATOR.length}
          data-aos-once="true"
        >
          <ButtonLink
            text="Estimate Your Investment"
            variant="primary"
            className="bg-primary capitalize flex felx-row gap-2 mb-3"
          >
            <svg
              slot="right-icon"
              class="w-4 h-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path></svg
            >
          </ButtonLink>
        </div>
      </div>
      <div class="w-5/12 cta-calculator__image ">
