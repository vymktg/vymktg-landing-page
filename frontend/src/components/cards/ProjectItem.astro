---
import type { Service } from "../../interface/Service";
export interface Props {
  url: string;
  name: string;
  image_url: string;
  className: string;
  services: Array<Service>;
}
const { className, url, name, image_url, services, ...props } = Astro.props;
---

<a
  href={url}
  class={`project-item group relative transition-all duration-700 xl:flex-1 ${className}`}
  {...props}
>
  <img
    src={image_url}
    class="object-cover rounded-xl xl:h-[420px] w-full"
    alt="Example"
  />
  <!-- <div
    class="h-[420px] backdrop-blur-md bg-blue-600/20 w-full absolute top-0 opacity-0 group-hover:opacity-100 duration-300 rounded-xl"
  >
  </div> -->
  <span
    class="title xl:opacity-0 duration-300 absolute z-10 bottom-5 left-5 xl:bottom-10 xl:left-10 text-white"
  >
    <div class="flex flex-col gap-3">
      <span class="text-xl xl:text-2xl font-semibold">{name}</span>
      <div class="service flex flex-row gap-3 transition-all delay-100">
        {
          services.length > 0 &&
            services.map((item: Service) => <span class="whitespace-nowrap text-sx xl:text-xl">{item?.title}</span>)
        }
      </div>
    </div>
  </span>
</a>

<style>
  .project-item.flex-4 {
    .title {
      opacity: 100;
    }
  }
  .project-item:before {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: linear-gradient(
      180deg,
      rgba(1, 15, 28, 0) 0%,
      rgba(1, 15, 28, 0.6) 100%
    );
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
  }
</style>
