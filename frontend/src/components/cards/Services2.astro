---

export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title } = Astro.props;
---

<div class="service-item relative bg-white p-4 group">
  <a href="" class="flex flex-col gap-4 justify-between items-start px-8 py-5">
    <div class="flex flex-row justify-between w-full">
      <!-- {icon && <Icon name={icon} class="w-10 ml-[-2px] text-primary" />} -->
      <span class="relative service-icon">
        <span>
          <svg
            width="32"
            height="40"
            viewBox="0 0 32 40"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M31 10.5V29.5C31 37.1 29.125 39 21.625 39H10.375C2.875 39 1 37.1 1 29.5V10.5C1 2.9 2.875 1 10.375 1H21.625C29.125 1 31 2.9 31 10.5Z"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              opacity="0.4"
              d="M19.7637 7.65088H12.2637"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              opacity="0.4"
              d="M15.9941 33.4891C17.5992 33.4891 18.9004 32.1706 18.9004 30.5441C18.9004 28.9176 17.5992 27.5991 15.9941 27.5991C14.3891 27.5991 13.0879 28.9176 13.0879 30.5441C13.0879 32.1706 14.3891 33.4891 15.9941 33.4891Z"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </span>
        <img
          src="data:image/png;base64,"
          alt="shape"
          class="absolute bottom-[-17px] right-[-7px] w-[50px] h-[50px]"
        />
      </span>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24">
        <path d="M7 7h8.586L5.293 17.293l1.414 1.414L17 8.414V17h2V5H7v2z">
        </path>
      </svg>
    </div>
    <h2
      class="services-title text-lg md:text-xl lg:text-2xl font-bold text-dark"
    >
      {title}
    </h2>
    <!-- <div class="line-clamp-3 text-sm md:text-base lg:text-lg font-normal">
      {description}
    </div> -->

    <!-- <span
      class="opacity-0 font-semibold text-base lg:text-lg text-dark group-hover:opacity-100 flex flex-row gap-2 items-center justify-start duration-500"
      >Learn More <svg
        slot="right-icon"
        class="w-3 md:w-4 h-3 md:h-4"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      ></span
    > -->
  </a>
</div>

<style>
  .service-item {
    border: 1px solid #eaeaef;
  }
  .service-item:hover {
    background-color: white;
    border-color: white;
    box-shadow: 0 20px 40px #03041c24;
    transition: all 0.3s ease-out 0s;
  }
  .service-item::after {
    transition: all 0.3s ease-out 0s;
    background-image: linear-gradient(
      329deg,
      #ff91fa 13.55%,
      #fa6490 48.54%,
      #f7d86a 86.44%
    );
    content: "";
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: -1;
  }
  .service-item:hover:after {
    transform: translate(8px, 8px);
  }

  .service-icon svg {
    backface-visibility: hidden;
    transform: translateZ(0);
    transition: transform 0.3s cubic-bezier(0.21, 0.6, 0.44, 2.18);
  }
  .service-item:hover .service-icon svg {
    transform: translateY(-5px) translate3d(0, -5px, 0);
  }
  .service-icon {
    color: black;
    display: inline-block;
    font-size: 16px;
    font-size: 40px;
    font-weight: 400;
    height: 40px;
    line-height: 40px;
    margin-bottom: 37px;
    position: relative;
    text-align: center;
    width: 50px;
  }
  .service-item .services-title {
    background-image: linear-gradient(#03041c, #03041c),
      linear-gradient(#03041c, #03041c);
    background-position: 100% 100%, 0 100%;
    background-repeat: no-repeat;
    background-size: 0 2px, 0 2px;
    transition: background-size 0.2s linear;
  }
  .service-item .services-title:hover {
    background-size: 0 2px,100% 2px;
}
</style>
