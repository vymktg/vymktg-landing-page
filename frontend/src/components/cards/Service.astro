---
import ButtonLink from "../shared/ButtonLink.astro";
import Paragraph from "../shared/Paragraph.astro";
export interface Props {
  title: string;
  description: string;
  icon: string;
  className?: string;
}

const { title, description, icon, className } = Astro.props;
---

<a
  href="#"
  class:list={[
    "rounded-3xl bg-white hover:shadow-2xl shadow-services-box p-14 group duration-500 hover:scale-105 h-72",
    className,
  ]}
>
  <div class="flex flex-col gap-4 items-start">
    <!-- {icon && <Icon name={icon} class="w-10 ml-[-2px] text-primary" />} -->
    <div class="bg-gray-100 w-14 h-14 flex justify-center items-center rounded-full">
      <slot />
    </div>
    <h2 class="text-lg md:text-xl font-semibold">
      {title}
    </h2>
    <div
      class="line-clamp-3 text-sm md:text-base lg:text-lg font-light text-text-gray"
    >
      {description}
    </div>
  </div>
</a>
