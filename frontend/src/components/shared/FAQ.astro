---
import Paragraph from "./Paragraph.astro";
export interface Props {
  question: string;
  answer: string;
  index: number;
}

const { question, answer, index } = Astro.props;
---

<details class="faq-item border-b border-b-gray-300 md:px-4 py-8">
  <summary class="list-none cursor-pointer">
    <div
      class="flex flex-row justify-between items-center text-lg md:text-xl gap-4 font-bold"
    >
      <span>{question}</span>
      <svg
        viewBox="0 0 24 24"
        class="w-3 text-gray-600 transition-transform duration-200"
      >
        <polyline
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-miterlimit="10"
          points="2,7 12,17 22,7"
          stroke-linejoin="round"></polyline>
      </svg>
    </div>
  </summary>
  <Paragraph className="answer pt-6">
    {answer}
  </Paragraph>
</details>