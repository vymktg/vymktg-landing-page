---
import { Image } from "astro:assets";
import type { ImageInterface } from "../../interface/Image";

export interface Props {
  question: string;
  answer: string;
  index: number;
  image_url?: string;
  image?: ImageInterface;
}

const { question, answer, image_url, index, image } = Astro.props;
---

<div
  id={`faq-item-${index}`}
  class="faq-item border-b border-b-gray-300 md:px-4 py-5"
>
  <div class="list-none cursor-pointer">
    <div
      class="flex flex-row justify-between items-center text-base gap-4 font-semibold"
    >
      <span class="faq__question w-10/12">{question}</span>
      <svg viewBox="0 0 24 24" class="w-3 transition-transform duration-200">
        <polyline
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-miterlimit="10"
          points="2,7 12,17 22,7"
          stroke-linejoin="round"></polyline>
      </svg>
    </div>
  </div>
  <div class="answer max-h-0 duration-700 transition-all overflow-hidden">
    <div class="md:flex md:flex-row md:justify-start items-center md:gap-3">
      {
        image_url && (
          <img class="w-5/12 md:w-1/5 md:my-3 float-left" src={image_url} />
        )
      }
      {
        image && (
          <Image
            class="w-5/12 md:w-1/5 md:my-3 float-left"
            src={image}
            alt=""
            loading="lazy"
          />
        )
      }
      <p class="text-base leading-6 my-6">{answer}</p>
    </div>
  </div>
</div>
