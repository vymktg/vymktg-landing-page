---
import { NAVIGATION_ITEM } from "../../config";
---

<div
  id="drawer-aside"
  class="fixed top-0 left-0 z-40 h-screen p-4 overflow-y-auto transition-transform -translate-x-full bg-white w-80"
  tabindex="-1"
  aria-labelledby="drawer-label"
>
  <div class="">
    <button
      id="drawer-close-button"
      type="button"
      data-drawer-hide="drawer-aside"
      aria-controls="drawer-aside"
      class="text-gray-400 bg-transparent hover:bg-blue-500 hover:text-white rounded-lg text-sm p-1.5 absolute top-2.5 right-2.5 inline-flex items-center"
    >
      <svg
        aria-hidden="true"
        class="w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"></path></svg
      >
      <span class="sr-only">Close menu</span>
    </button>
    <div class="flex flex-col mt-10">
      {
        NAVIGATION_ITEM.map((item) => (
          <a
            href={item.href}
            class={
              item.href === Astro.url.pathname
                ? "block py-2 pl-3 pr-4 bg-blue-700 text-white border-b-2 rounded-lg"
                : "block py-2 pl-3 pr-4 text-gray-900 rounded-lg hover:bg-blue-200 focus:bg-blue-200 focus:text-white hover:text-white"
            }
          >
            {item.title}
          </a>
        ))
      }
    </div>
  </div>
</div>
