---
import Container from "../../components/shared/Container.astro";
import Breadcrumb from "../../components/shared/Breadcrumb.astro";
import BasePage from "../../layouts/BasePage.astro";
import { SERVICE_LIST } from "../../config";
import GetInTouch from "../../components/shared/GetInTouch.astro";
import CaseStudy from "../../components/shared/CaseStudy.astro";

const IMAGE_URL =
  "https://img.freepik.com/free-photo/executive-manager-woman-explaining-management-statistics-working-company-strategy-overtime-office-meeting-room_482257-2393.jpg?w=2000&t=st=1692199113~exp=1692199713~hmac=d5c916f23047dd54d2dd79780d0f4f52ce66d994dbf8c159fc1db74d57c66722";
---

<BasePage>
  <div class="flex flex-col gap-10">
    <div class="bg-gray-50">
      <div
        class="bg-center bg-fixed"
        style={`background-image:url(${IMAGE_URL}); background-position: center -340px`}
      >
        <div class="pt-52 pb-32 backdrop- bg-[#080211]/60">
          <Container className="flex flex-col justify-center items-center">
            <h1 class="text-7xl font-bold mx-auto text-white">Services</h1>
            <Breadcrumb />
          </Container>
        </div>
      </div>
      <Container className="flex flex-col gap-20 z-10">
        <section
          class="mt-[-5rem] bg-white rounded-md w-full px-12 py-10 md:px-16 md:py-14 lg:px-24 lg:py-20"
          style="box-shadow: 0px -40px 50px rgba(10, 4, 22, 0.1);"
        >
          <div class="flex flex-col">
            <div
              class="flex flex-row gap-4 md:gap-10 justify-start items-center divide-x"
            >
              <div class="uppercase text-2xl font-medium">What</div>
              <div
                class="text-3xl md:text-5xl font-semibold text-black p-3 md:p-10"
              >
                Strive to provide <br /> the best marketing services!
              </div>
            </div>
            <div
              class="md:w-5/6 lg:w-10/12 mx-auto text-base md:text-xl mt-8 font-normal"
            >
              Dedicated to excellence, our relentless pursuit is delivering
              unparalleled marketing services. With unwavering commitment, we
              ensure your brand's success through our top-tier strategies and
              innovative approaches.
            </div>
          </div>
        </section>
        <section class="">
          <ul
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-9"
          >
            {
              SERVICE_LIST.map((item, index) => (
                <li class="relative bg-white flex flex-col gap-5 p-12 rounded-md group hover:bg-blue-600 hover:text-white duration-500 md:hover:scale-110 cursor-pointer">
                  <div class="w-10 h-10 rounded-full bg-gray-200 group-hover:bg-white flex flex-col justify-center items-center">
                    <svg
                      class="fill-blue-600"
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 20 20"
                    >
                      <path d="M14.19 0H5.81C2.17 0 0 2.17 0 5.81V14.19C0 17.83 2.17 20 5.81 20H14.19C17.83 20 20 17.83 20 14.19V5.81C20 2.17 17.83 0 14.19 0ZM7.97 12.9L5.72 15.15C5.57 15.3 5.38 15.37 5.19 15.37C5 15.37 4.8 15.3 4.66 15.15L3.91 14.4C3.61 14.11 3.61 13.63 3.91 13.34C4.2 13.05 4.67 13.05 4.97 13.34L5.19 13.56L6.91 11.84C7.2 11.55 7.67 11.55 7.97 11.84C8.26 12.13 8.26 12.61 7.97 12.9ZM7.97 5.9L5.72 8.15C5.57 8.3 5.38 8.37 5.19 8.37C5 8.37 4.8 8.3 4.66 8.15L3.91 7.4C3.61 7.11 3.61 6.63 3.91 6.34C4.2 6.05 4.67 6.05 4.97 6.34L5.19 6.56L6.91 4.84C7.2 4.55 7.67 4.55 7.97 4.84C8.26 5.13 8.26 5.61 7.97 5.9ZM15.56 14.62H10.31C9.9 14.62 9.56 14.28 9.56 13.87C9.56 13.46 9.9 13.12 10.31 13.12H15.56C15.98 13.12 16.31 13.46 16.31 13.87C16.31 14.28 15.98 14.62 15.56 14.62ZM15.56 7.62H10.31C9.9 7.62 9.56 7.28 9.56 6.87C9.56 6.46 9.9 6.12 10.31 6.12H15.56C15.98 6.12 16.31 6.46 16.31 6.87C16.31 7.28 15.98 7.62 15.56 7.62Z" />
                    </svg>
                  </div>
                  <div class="font-bold text-lg">{item.title}</div>
                  <div class="mt-2">{item.description}</div>
                  {index === 4 && (
                    <div class="absolute top-0 right-0 bg-red-400 text-white font-semibold px-8 py-2 rounded-tr-md">
                      New!
                    </div>
                  )}
                </li>
              ))
            }
          </ul>
        </section>
      </Container>
    </div>
    <CaseStudy />
    <GetInTouch />
  </div>
</BasePage>
